	XDEF	_main
	XDEF	__base

%ifndef STACKSIZE
%define STACKSIZE	$1000
%endif

	DATA
__dummy	dc.l	$11111918

	BSS
__stack	ds.b	STACKSIZE

	TEXT
	move.l	$04(sp),a0	; basepage address

	lea	__stack+STACKSIZE-$0040.w(pc),sp

	move.l	$0018(a0),d0		; address of the BSS segment
	add.l	$001c(a0),d0		; size of the BSS segment
	sub.l	a0,d0

	move.l	d0,-(sp)		; new size
	move.l	a0,-(sp)		; start address
	pea	($004a0000).l		; Mshrink()
	trap	#1
	lea	12(sp),sp

	bsr	_main

	move.w	d0,-(sp)
	move.w	#$004c,-(sp)
	trap	#1

	XDEF	___main

___main	rts

; EOF
